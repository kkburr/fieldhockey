<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'Parent First Name' %><br>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label 'Parent Last Name' %><br>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label 'County You Live in' %><br>
    <%= f.select :county, %w(Adams Arapahoe Broomfield Boulder Denver Douglas Elbert Jefferson Summit) %>
  </div>
  <div class="field">
    <%= f.label 'What High School do you expect your children to attend?' %><br>
    <%= f.text_field :high_school %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
